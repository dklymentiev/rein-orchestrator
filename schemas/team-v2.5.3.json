{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rein Team Schema v2.5.3",
  "description": "Schema for Rein v2.5.3 team definitions",
  "type": "object",
  "required": ["schema_version", "name", "specialists"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "2.5.3",
      "description": "Schema version identifier"
    },
    "name": {
      "type": "string",
      "pattern": "^team-[a-z0-9-]+$",
      "minLength": 6,
      "maxLength": 100,
      "description": "Team name (must start with 'team-')"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Human-readable team description"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "domain": {
          "type": "string",
          "description": "Domain or category (e.g., 'humor', 'engineering', 'design')"
        }
      },
      "description": "Optional metadata about the team"
    },
    "collaboration_tone": {
      "type": "string",
      "enum": [
        "professional",
        "creative",
        "humorous",
        "academic",
        "casual",
        "formal"
      ],
      "default": "professional",
      "description": "Tone for inter-specialist collaboration"
    },
    "specialists": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "$ref": "#/definitions/specialist_mapping"
      },
      "description": "List of specialists in this team"
    },
    "shared_instructions": {
      "type": "string",
      "maxLength": 2000,
      "description": "Instructions shared across all team members"
    }
  },
  "definitions": {
    "specialist_mapping": {
      "type": "object",
      "required": ["role", "specialist"],
      "additionalProperties": false,
      "properties": {
        "role": {
          "type": "string",
          "pattern": "^[a-z0-9_-]+$",
          "minLength": 1,
          "maxLength": 50,
          "description": "Role name (lowercase, hyphens/underscores allowed)"
        },
        "specialist": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Reference to specialist file (without .md extension)"
        },
        "bio": {
          "type": "string",
          "maxLength": 500,
          "description": "Short bio for this specialist in the team"
        }
      }
    }
  }
}
